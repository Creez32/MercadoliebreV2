<!-- Productos -->

        <div class="container">
            <div class="row">
                <% productos.forEach(producto=> { %>
                    
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="contenido card mx-auto" style="width: 98%;">
                            <img src="/images/<%= producto.image %>" class="card-img-top" alt=>
                            <div class="datos">
                                <h3>$<%= producto.price %>
                                </h3>
                                <span><%= producto.discount %>% OFF </span>
                                <p>
                                    <%= producto.name %>
                                </p>
                                
                                <i class="fas fa-truck"></i>
                                <a href="productos/detalles/<%= producto.id %>/<%= producto.category%>  ">Ver Mas</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>



